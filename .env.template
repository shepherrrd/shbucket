# SHBucket Configuration
# Copy this file to .env and update the values

# Database
DATABASE_URL=postgres://shbucket:shbucket@localhost:5432/shbucket?sslmode=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Storage Configuration
STORAGE_PATH=./storage

# Admin User Configuration (Required)
ADMIN_EMAIL=admin@shbucket.local
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Manager User Configuration (Optional)
MANAGER_EMAIL=manager@shbucket.local
MANAGER_USERNAME=manager
MANAGER_PASSWORD=manager123

# Editor User Configuration (Optional)
EDITOR_EMAIL=editor@shbucket.local
EDITOR_USERNAME=editor
EDITOR_PASSWORD=editor123

# CORS
ENABLE_CORS=true

# Node Configuration (for node installations)
NODE_NAME=shbucket-main
MAX_STORAGE=107374182400
API_KEY=