# SHBucket Configuration Example
# Copy this file to .env and update with your settings

# Database Configuration
POSTGRES_DB=shbucket
POSTGRES_USER=shbucket
POSTGRES_PASSWORD=your_secure_password
POSTGRES_PORT=5432

# SHBucket Server Configuration  
SHBUCKET_PORT=8080
SHBUCKET_HOST=0.0.0.0
SHBUCKET_MODE=master

# Security Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SIGNATURE_SECRET=your-signature-secret-change-this-in-production

# Admin User (First time setup only)
ADMIN_EMAIL=admin@shbucket.local
ADMIN_PASSWORD=admin123

# Storage Configuration
MAX_STORAGE_SIZE=10737418240  # 10GB in bytes
STORAGE_PATH=/app/storage

# Optional Configuration
LOG_LEVEL=info
ENABLE_CORS=true
BASE_URL=http://localhost:8080

# Web Interface
WEB_PORT=3000

# Node Configuration (for storage nodes)
# MASTER_URL=http://your-master-server:8080
# NODE_ID=1
# NODE_NAME=storage-node-1
# NODE_PORT=8081